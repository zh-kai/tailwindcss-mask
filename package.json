{
  "name": "@freeloop/tailwindcss-mask",
  "version": "0.1.0",
  "description": "Tailwindcss mask image plugin.",
  "main": "src/index.js",
  "scripts": {
    "release": "np",
    "test": "NODE_OPTIONS=--experimental-vm-modules c8 jest"
  },
  "license": "MIT",
  "repository": "https://github.com/zh-kai/tailwindcss-mask",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "c8": "^8.0.1",
    "jest": "^29.7.0",
    "np": "^10.0.2",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest/customMatchers.js"
    ]
  },
  "c8": {
    "exclude": [
      "jest/customMatchers.js",
      "**/*.test.js"
    ]
  },
  "keywords": [
    "tailwindcss",
    "css",
    "mask-image"
  ]
}
